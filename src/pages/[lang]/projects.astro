---
import { getSupportedLanguages } from "../../config";
import { getEntry, render } from "astro:content";
import Markdown from "../../components/misc/Markdown.astro";
import { siteConfig } from "../../config";
import I18nKey from "../../i18n/i18nKey";
import { i18n } from "../../i18n/translation";
import MainGridLayout from "../../layouts/MainGridLayout.astro";
import { getSiteDefaultLanguage } from "../../utils/site-language-utils";

export async function getStaticPaths() {
    const supportedLanguages = getSupportedLanguages();
    const defaultLang = getSiteDefaultLanguage();
    
    return Object.keys(supportedLanguages)
        .filter(lang => lang !== defaultLang) // Exclude default language because it uses the default route
        .map(lang => ({
            params: { lang }
        }));
}

const { lang } = Astro.params;
const currentLang = lang || getSiteDefaultLanguage();

const projectsPost = await getEntry("spec", "projects");

if (!projectsPost) {
	throw new Error("Projects page content not found");
}

const { Content } = await render(projectsPost);

const title = i18n(I18nKey.projects, currentLang);
---

<MainGridLayout title={title} description={title} lang={currentLang} banner={siteConfig.pages?.projects?.src}>
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
        <div class="card-base z-10 px-9 py-6 relative w-full ">
            <Markdown class="mt-2">
                <Content />
            </Markdown>
        </div>
    </div>
</MainGridLayout>
